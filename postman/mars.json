  "item": [
    {
      "name": "List Tables",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/mars/tables", "host": ["{{baseUrl}}"], "path": ["mars", "tables"] }
      }
    },
    {
      "name": "Get Table Schema",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/mars/tables/:tableName", "host": ["{{baseUrl}}"], "path": ["mars", "tables", ":tableName"] }
      }
    },
    {
      "name": "Create Table",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"columns\": [\n    { \"name\": \"id\", \"type\": \"SERIAL\", \"primaryKey\": true },\n    { \"name\": \"name\", \"type\": \"VARCHAR(255)\" }\n  ]\n}"
        },
        "url": { "raw": "{{baseUrl}}/mars/tables/customers", "host": ["{{baseUrl}}"], "path": ["mars", "tables", "customers"] }
      }
    },
    {
      "name": "Delete Table",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": { "raw": "{{baseUrl}}/mars/tables/:tableName", "host": ["{{baseUrl}}"], "path": ["mars", "tables", ":tableName"] }
      }
    },
    {
      "name": "Get All Records",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/mars/records/get/:tableName", "host": ["{{baseUrl}}"], "path": ["mars", "records", "get", ":tableName"] }
      }
    },
    {
      "name": "Get Record by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/mars/records/get/id/:tableName?id=1",
          "host": ["{{baseUrl}}"],
          "path": ["mars", "records", "get", "id", ":tableName"],
          "query": [{ "key": "id", "value": "1" }]
        }
      }
    },
    {
      "name": "Create Record",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"table\": \"customers\",\n  \"data\": { \"name\": \"Alice\", \"email\": \"alice@example.com\" }\n}"
        },
        "url": { "raw": "{{baseUrl}}/mars/records/create", "host": ["{{baseUrl}}"], "path": ["mars", "records", "create"] }
      }
    },
    {
      "name": "Update Record",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"newalice@example.com\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/mars/records/update/customers/1", "host": ["{{baseUrl}}"], "path": ["mars", "records", "update", "customers", "1"] }
      }
    },
    {
      "name": "Delete Record",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": { "raw": "{{baseUrl}}/mars/records/delete/customers/1", "host": ["{{baseUrl}}"], "path": ["mars", "records", "delete", "customers", "1"] }
      }
    }
